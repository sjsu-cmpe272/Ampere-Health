<!doctype html>
<html>
<head>
    <title>Ampere Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="column">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3  class="text-info"><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

            </div>
        </div>

    <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-user"></span> Fitbit</h3>

                    <p>
                        <strong>id</strong>: <%= user.fitbit.id %><br>
                        <strong>Name</strong>: <%= user.fitbit.name %><br>
                        <strong>Age</strong>: <%= user.fitbit.age %><br>
                        <strong>Gender</strong>: <%= user.fitbit.gender %><br>
                        <strong>Weight</strong>: <%= user.fitbit.weight %><br>
                        <strong>Height</strong>: <%= user.fitbit.height %><br>
                    </p>

            </div>
    </div>

    <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-user"></span> Get Restaurent List</h3>
                    <p>Click Here to Get Restaurent List <a href="/restaurent">View List</a></p>
            </div>
    </div>

    <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-user"></span> Get Menu List</h3>
                    <p>Click Here to Get Menu List <a href="/menu">View List</a></p>
            </div>
    </div>
    </div>
</div>
</body>
</html>
